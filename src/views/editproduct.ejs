<!doctype html>
<html lang="es">

<head>
    <title>Editar producto</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
</head>

<body>
    <header>
        <!-- place navbar here -->
        <%- include('partials/nav') %>
    </header>
    <main>
        <div class="container">
            <h3 class="text-center mt-3 mb-3">Editar Producto: </h3>
            <form action="/editproduct/<%= product.id %>" method="POST" class="needs-validation" novalidate>
                <h3 class="text-center mt-3 mb-3">Información del producto: </h3>
                <!--Informacion principal-->
                <section class="card">
                    <div class="card-body">
                        <div class="row justify-content-evenly">
                            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 m-lg-3 mb-3 mt-3">
                                <label for="nombre" class="form-label">Nombre del producto</label>
                                <input type="text" class="form-control" id="nombre" name="nombre"
                                    placeholder="Nombre del producto" value="<%= product.nombre %>" required>
                                <div class="valid-feedback">
                                    Ingreso correcto
                                </div>
                                <div class="invalid-feedback">
                                    Ingresa el nombre
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 m-lg-3 mb-3 mt-3">
                                <label for="descripcion" class="form-label">Descripción del producto</label>
                                <input type="text" class="form-control" id="descripcion"
                                    placeholder="Descripción del producto" value="<%= product.descripcion %>"
                                    name="descripcion" required>
                                <div class="valid-feedback">
                                    Ingreso correcto
                                </div>
                                <div class="invalid-feedback">
                                    Ingresa la descripción
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 m-lg-3 mb-3 mt-3">
                                <label for="categoria" class="form-label">Categoria del producto</label>
                                <select class="form-select" id="categoria" name="categoria" required>
                                    <option value="Gaseosa">Gaseosa</option>
                                    <option value="Cerveza">Cerveza</option>
                                    <option value="Agua">Agua</option>
                                    <option value="Vino">Vino</option>
                                    <option value="Bebida alcoholica">Bebida alcoholica</option>
                                </select>
                                <div class="valid-feedback">
                                    Ingreso correcto
                                </div>
                                <div class="invalid-feedback">
                                    Ingresa la categoria
                                </div>

                            </div>
                            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 m-lg-3 mb-3 mt-3">
                                <label for="precio" class="form-label">Precio de venta del producto</label>
                                <input type="number" class="form-control" id="precioVenta" name="precioVenta"
                                    placeholder="Precio de venta del producto" step="0.01"
                                    value="<%= product.precioVenta %>" required>
                                <div class="valid-feedback">
                                    Ingreso correcto
                                </div>
                                <div class="invalid-feedback">
                                    Ingresa el precio
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container text-center mt-3 mb-3 d-none" id="mensaje">
                        <p class="text-bg-danger">¿Estás seguro que deseas Eliminar el producto?</p>
                    </div>
                    <div class="container ">
                        <div class="row justify-content-center">
                            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 m-lg-3 mb-3 mt-3 text-center">
                                <button type="submit" class="btn btn-dark"> <i class="bi bi-pencil-square"></i> Editar
                                    producto</button>
                            </div>
                            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 m-lg-3 mb-3 mt-3 text-center">
                                <p class="btn btn-outline-danger" id="mostrar"> <i class="bi bi-trash"></i> Eliminar producto</p>
                                <a href="/deleteproduct/<%= product.id %>" class="btn btn-outline-danger d-none"
                                    id="btneliminar"><i class="bi bi-trash"></i>Eliminar producto</a>
                            </div>
                        </div>
                    </div>
                </section>
            </form>
        </div>
    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
        </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
        integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
        </script>
    <script>
        /*=============================================
    VALIDAR FORMULARIO
    =============================================*/

        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Get the forms we want to add validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
    <script>
        let mostrar = document.getElementById("mostrar");
        let btneliminar = document.getElementById("btneliminar");
        let mensaje = document.getElementById("mensaje");
        mostrar.addEventListener("click", () => {
            btneliminar.classList.remove("d-none");
            mensaje.classList.remove("d-none");
            mostrar.classList.add("d-none");
        })
    </script>
</body>

</html>